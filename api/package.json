{
  "name": "todo-api",
  "version": "1.0.0",
  "description": "The API server for the JT's demo ToDo App.",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "db:migration": "node dist/db/migrate.js ./db/patches",
    "dev": "NODE_ENV=dev PORT=8000 nodemon ./src/server.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "npm run lint && NODE_ENV=test nyc --reporter=lcov --reporter=html --reporter=text-summary mocha -r ts-node/register --timeout 10000 tests/**/*.ts"
  },
  "author": "JT Turner <jtwebman@gmail.com> (https://jtwebman.com)",
  "license": "MIT",
  "dependencies": {
    "async-retry": "1.3.1",
    "config": "3.3.3",
    "express": "4.17.1",
    "http-status-codes": "2.1.4",
    "pg-promise": "10.9.2",
    "stoppable": "1.1.0",
    "typesafe-joi": "^2.1.0",
    "winston": "3.3.3"
  },
  "devDependencies": {
    "@types/async-retry": "^1.4.2",
    "@types/chai": "^4.2.15",
    "@types/config": "0.0.38",
    "@types/express": "4.17.11",
    "@types/mocha": "^8.2.0",
    "@types/node": "14.14.27",
    "@types/stoppable": "1.1.0",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "4.15.1",
    "@typescript-eslint/parser": "4.15.1",
    "chai": "4.3.0",
    "coveralls-next": "4.0.0",
    "eslint": "7.20.0",
    "eslint-config-prettier": "7.2.0",
    "eslint-plugin-prettier": "3.3.1",
    "mocha": "8.3.0",
    "nodemon": "2.0.7",
    "nyc": "15.1.0",
    "prettier": "2.2.1",
    "supertest": "6.1.3",
    "ts-node": "9.1.1",
    "typescript": "4.1.5"
  }
}
